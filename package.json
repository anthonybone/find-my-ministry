{
    "name": "find-my-ministry",
    "version": "1.0.0",
    "description": "A comprehensive app for finding church ministries throughout a diocese",
    "main": "server/dist/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "cd server && npm run dev",
        "dev:client": "cd client && npm start",
        "build": "npm run build:client && npm run build:server",
        "build:client": "cd client && npm run build",
        "build:server": "cd server && npm run build",
        "start": "cd server && npm start",
        "db:generate": "cd server && npx prisma generate",
        "db:migrate": "cd server && npx prisma migrate dev",
        "db:seed": "cd server && npx tsx prisma/seed.ts",
        "setup": "npm install && cd client && npm install && cd ../server && npm install"
    },
    "keywords": [
        "church",
        "ministry",
        "diocese",
        "catholic",
        "finder",
        "map"
    ],
    "author": "Anthony Bone",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}
